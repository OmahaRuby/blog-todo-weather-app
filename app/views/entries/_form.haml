= form_for entry do |f|
  - if entry.errors.any?
    .errors
      = entry.errors.full_messages.to_sentence
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body

  = f.submit
  
  - if entry.new_record?
    = link_to 'Cancel', entries_path
  - else
    = link_to 'Cancel', entry_path(entry)